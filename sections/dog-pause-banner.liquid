<div data-section-id="{{ section.id }}" data-section-type="static-page">

  {%- assign sidebarHeading = section.settings.title | escape -%}
  {%- assign sidebarContent = section.settings.content -%}

  {%- if sidebarHeading != blank or sidebarContent != blank -%}
    {%- assign hasSidebar = true -%}
  {%- else -%}
    {%- assign hasSidebar = false -%}
  {%- endif -%}

  <main class="content content-area" id ="slider">
    <div class="container" >
  <img src="https://cdn.shopify.com/s/files/1/0020/2915/8455/files/dog-pause.jpg?v=1649262926" alt="dog pause banner">
  
  
      <div class="centered mytext" style="top: 50%; left: 62%;" id="pause">
  		<h5 style="padding-bottom: 20px;">Give your pup a break in the A/C while you keep walking or grab lunch.</h5>
        <a href="/pages/dog-pause" title="Dog Pause" class="action-button" id="pause-btn">Reserve A Kennel Now</a>
   
  </div>
</div>

      {% if hasSidebar %}
        <div class="rte sidebar">
          {% if sidebarHeading != blank %}
            <h2 class="title">{{ sidebarHeading }}</h2>
          {% endif %}

          {% if sidebarContent.size > 0 %}
            {{ sidebarContent }}
          {% endif %}
        </div>
      {% endif %}

    </div>

  </main>

</div>

{% schema %}
{
  "name": "Static pages",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "header",
      "content": "Sidebar"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "content",
      "label": "Content"
    }
  ]
}

{% endschema %}
    
