<div class="sharethis">
  <button
    class="sharethis-trigger"
    data-sharethis
  >
    {% include 'icon' with 'share' %}
    <span class="sharethis-title">{{ 'general.share.sharethis' | t }}</span>
  </button>

  <div
    class="sharethis-modal"
    data-sharethis-modal
  >
    <a
      class="sharethis-link sharethis-facebook"
      href="http://www.facebook.com/sharer.php?u={{ canonical_url | url_encode }}"
    >
      {% include 'icon' with 'share-facebook' %}
    </a>

    <a
      class="sharethis-link sharethis-twitter"
      href="http://twitter.com/share?url={{ canonical_url | url_encode }}"
    >
      {% include 'icon' with 'share-twitter' %}
    </a>

    <a
      class="sharethis-link sharethis-pinterest"
      href="http://pinterest.com/pin/create/button/?url={{ canonical_url | url_encode }}"
    >
      {% include 'icon' with 'share-pinterest' %}
    </a>

    <a
      class="sharethis-link sharethis-email"
      href="mailto:?Subject={{ email_subject | escape }}&Body={{ email_body | escape }}"
    >
      {% include 'icon' with 'share-email' %}
    </a>
  </div>
</div>
