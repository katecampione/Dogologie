{% assign heading = 'h2' %}
{% if template == 'index' or template contains 'customers' %}
  {% assign heading = 'h1' %}
{% endif %}

<{{ heading }}
  class="
    store-title
    {% if logo != blank %}store-logo{% endif %}
  "
  {% if logo != blank %}
    style="max-width: {{ logoWidth }}px;"
  {% endif %}
  

>
  {% if logo != blank %}
    <a href="/" style="max-width: {{ logoWidth }}px;">
      {%
        include 'rimg'
        img: logo,
        alt: shop.description,
        size: '800x800'
      %}
    </a>
  {% else %}
    {{ shop.name | link_to: '/' }}
  {% endif %}
</{{ heading }}>

<style>
  {% if headerLayout != 'normal' and headerCenter == false %}
    .store-title {
      width: {{ logoWidth | plus: 30 }}px;
    }

    @media (max-width: 960px) {
      .store-title {
        width: auto;
      }
    }
  {% endif %}
</style>
